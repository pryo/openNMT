cd openNMT
sudo pip3 install -r requirements.txt
sudo gunicorn --workers=4 --bind 0.0.0.0:80 main:app --daemon

# latest try

sudo apt-get update && sudo apt-get install git -y
sudo /opt/deeplearning/install-driver.sh
cd ~
