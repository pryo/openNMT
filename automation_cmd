sudo apt-get update && sudo apt-get install git -y
git clone https://github.com/pryo/openNMT.git
sudo pip3 install https://download.pytorch.org/whl/cu100/torch-1.1.0-cp36-cp36m-linux_x86_64.whl
sudo pip3 install -r requirements.txt
sudo gunicorn --workers=4 --bind 0.0.0.0:8000 main:app --daemon

# on pytorch installed image
